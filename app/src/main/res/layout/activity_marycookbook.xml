<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Marycookbook">


    <TextView
        android:id="@+id/topview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="COOKBOOK"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="35dp"
        android:background="#D16002"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/topview"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
    <TextView
        android:id="@+id/courses"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Courses:"
        android:gravity="center"
        android:textSize="25dp"
        android:layout_marginLeft="5dp"
        android:textColor="@color/white"
        android:background="#CC5500"

        />
    <Button
        android:id="@+id/breakid"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Breakfast"
        android:textSize="15dp"
        android:paddingHorizontal="-200dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/squareshape"
        />
    <Button
        android:id="@+id/lunchid"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Lunch"
        android:textSize="15dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/squareshape"


       />
    <Button
        android:id="@+id/dinnerid"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Dinner"
        android:textSize="15dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/squareshape"
       />
</LinearLayout>
    <TextView
        android:id="@+id/btntext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Breakfast"
        android:textColor="@color/black"
        android:background="@color/oorange"
        android:textSize="40dp"
        app:layout_constraintTop_toBottomOf="@id/layout"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <ListView
        android:id="@+id/listings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btntext"
        app:layout_constraintLeft_toLeftOf="parent">



    </ListView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:backgroundTint="@color/ooorange"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="30dp"
        app:srcCompat="@android:drawable/ic_input_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>